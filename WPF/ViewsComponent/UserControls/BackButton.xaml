<UserControl x:Class="WPF.ViewsComponent.UserControls.BackButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="root"
             mc:Ignorable="d">
    <Grid>
        <Button x:Name="backButton"
                BorderBrush="Transparent"
                Background="Transparent"
                Command="{Binding buttonCommand, ElementName=root}"
                Style="{DynamicResource CustomButtonBackStyle}"
                Padding="3"
                >
            <Image Source="/Resource/Image/back-black.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>

